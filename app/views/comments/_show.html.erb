<script>
  closeAllHandlers();
  reset_map_controllers();
  document.getElementById("page_status").innerHTML = '';
  document.body.classList.remove('loading');
  document.title = '... On The Air'
  document.getElementById('logo').innerHTML='... On The Air'
</script>

<div id="actionbar" class="span7">
  <div id="crumbs">
    <%=link_to "Home", '/', remote: true,  :id => 'home', :onclick => "linkHandler('home')" %>
    &nbsp;--&gt;&nbsp;
    Comments
    &nbsp;--&gt;&nbsp;
    <b><%=@comment.id.to_s%></b>
  </div>

  <div id="controls">
    <%=  link_to "Index", '/comments/', class: "btn btn-small btn-primary", :remote => true,  :onclick => "linkHandler('index')"%>
    <% if write_access? and current_user and (current_user.is_admin or @comment.updated_by_id==current_user.id) %>
      <%=  link_to "Edit", '/comments/'+@comment.id.to_s+'/edit', class: "btn btn-small btn-primary",remote: true,  :id => 'edit', :onclick => "linkHandler('edit')"%>
      <%=  link_to "Delete", '/comments/'+@comment.id.to_s+'/delete', confirm: "Delete comment: Are you sure?", class: "btn btn-small btn-primary",remote: true,  :id => 'delete', :onclick => "linkHandler('delete')"%>
    <% end %>
    <%=render 'map_controls'%> 
  </div>
</div>


<div id="right_scroll">
  <%= render 'flash' %>
  <%= render 'comment_details' %>

  <div class="erow">
    <div class="hrline">
      <hr noshade size="4">
    </div>
  </div>
</div>

<script>
  document.getElementById('actionbar-full').innerHTML=document.getElementById('actionbar').innerHTML;
</script>
