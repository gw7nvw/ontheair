<script>
   reset_map_controllers();
   document.getElementById("page_status").innerHTML = '';
   site_toggle_huts(false);
   site_toggle_island(0);
   document.title = '... On the Air'
   document.getElementById('logo').innerHTML='... On The Air'

</script>

<div id="actionbar" class="span7">
   <div id="crumbs">
     <%=link_to "Home", '/', remote: true,  :id => 'home', :onclick => "linkHandler('home')" %>
     &nbsp;--&gt;&nbsp;
     <b>WWFF Logs</b>
     </div>
   <div id="controls">
       <%=  link_to "Show/Hide Map", "#", class: "btn btn-small btn-primary",   :onclick => "toggle_map(); return false;"%>
   </div>
</div>
<div id="right_scroll">
  <%= render 'flash' %>
  <table> 
    <tr>
      <th>Park</th>
      <th>WWFF Code</th>
      <th>Contacts</th> 
      <th></th>
    </tr>
    <% logdays=@user.wwff_logs %>
    <% if logdays then logdays.sort_by!{|hsh| hsh[:date]}.reverse! end%>
    <% logdays.each do |logday| %>
      <tr>
        <td><%=logday[:park].name%></td>
        <td><%=logday[:park].wwff_park.code%></td>
        <td><%=logday[:contacts].count%></td>
        <% 
           submitted_to_wwff=true
           logday[:contacts].each do |c| 
             if !c.submitted_to_wwff then submitted_to_wwff=false end 
           end
        %>
        <td><%=if !submitted_to_wwff then  link_to "Sumbit Log", '/wwff_logs/'+logday[:park].id.to_s+"?user="+@user.callsign, class: "btn btn-small btn-primary",remote: true, :onclick => "linkHandler('submit')" else link_to "Resend Log", '/wwff_logs/'+logday[:park].id.to_s+"?user="+@user.callsign, class: "btn btn-small btn-primary",remote: true, :onclick => "linkHandler('submit')" end%></td>
      </tr>
    <% end%>
  </table>
</div>

<script>
    if(site_map_size==0) { 
       $('#actionbar').removeClass('span7');
       $('#actionbar').addClass('span12');
}
</script>
