<script>
   reset_map_controllers();
   document.getElementById("page_status").innerHTML = '';
   document.body.classList.remove('loading');
   document.title = '... On the Air'
   document.getElementById('logo').innerHTML='... On The Air'

</script>

<div id="actionbar" class="span7">
   <div id="crumbs">
     <%=link_to "Home", '/', remote: true,  :id => 'home', :onclick => "linkHandler('home')" %>
     &nbsp;--&gt;&nbsp;
     <b>HEMA Logs</b>
     </div>
   <div id="controls">
     <%=render 'map_controls'%>
   </div>
</div>
<div id="right_scroll">
  <%= render 'flash' %>
  <table id="logs_table"> 
    <tr>
      <th>Summit</th>
      <th>HEMA Code</th>
      <th>Date (UTC)</th>
      <th>Contacts</th> 
      <th></th>
    </tr>
    <% @logs.each do |log| %>
      <tr>
        <td><%=log[:name]%></td>
        <td><%=log[:code]%></td>
        <td><%=if log[:date] then log[:date].strftime("%Y-%m-%d") else "" end%></td>
        <td><%=log[:contacts]%></td>
        <td><%=if !log[:submitted_to_hema] then  link_to "Submit Log", '/hema_logs/'+log[:id].to_s, class: "btn btn-small btn-primary",remote: true, :onclick => "linkHandler('submit')" else link_to "Resend Log", '/hema_logs/'+log[:id].to_s, class: "btn btn-small btn-primary",remote: true, :onclick => "linkHandler('submit')" end%></td>
      </tr>
    <% end%>
  </table>
</div>

<script>
  document.getElementById('actionbar-full').innerHTML=document.getElementById('actionbar').innerHTML;
  reset_map_controllers(); 
</script>
