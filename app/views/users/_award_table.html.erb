<div class="erow">
  <div class="sectiontitle" style="margin-top: 12px;">Awards:</div>
  <table id="award_table">
    <tr>
      <th>Award</th>
      <th>Score</th>
      <th>Achieved</th>
      <th>Next</th>
    </tr>

    <% @awards.each do |a| %>
      <% awarded=@user.has_award(a.id) %>
      <tr>
        <td>
          <%=link_to a.name, '/awards/'+a.id.to_s, remote: true,  :id => 'award', :onclick => "linkHandler('award')" %>
        </td>
        <td>
          <% if a.chased==true and a.activated==true then %>
            <%# need completed score %>
          <% elsif a.chased==true then %>
            <% if a.programme.in?(['elevation']) then %>
              <% score=1.0*@user.chased_count_total[a.programme]/1000 %>
            <% else %>
              <% score=@user.chased_count_total[a.programme] %>
            <% end %>
          <% elsif a.activated==true then %>
            <% if a.programme.in?(['elevation']) then %>
              <% score=1.0*@user.activated_count_total[a.programme]/1000 %>
            <% else %>
              <% score=@user.qualified_count_total[a.programme] %>
            <% end %>
          <% else %>
            <% score=@user.score[a.programme] %>
          <% end%>
          <%=score%>
        </td>
        <td>
          <%=awarded[:latest]%>
        </td>
        <td>
          <%=awarded[:next]%>
        </td>
      </tr>
    <% end %>
  </table>
</div>
