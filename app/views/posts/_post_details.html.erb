 <div class="bordered_box">
   <div class="box_header">
      <p><div class="sectiontitle"><%=@post.title%></div>
      </p>
      <p>
      <%= link_to @post.updated_by_name, '/users/'+@post.updated_by_name,remote: true,  :id => 'user', :onclick => "linkHandler('user')" %>
      <%=if @post.updated_at > @post.created_at then " updated in " else " posted in " end %> 
      <%=if @post.topic then @post.topic.name else "??" end %> on 
      <%=@post.updated_at.in_time_zone(@tz.name).strftime("%Y-%m-%d")%>
      </p>
      <% if @post.referenced_date then %>
        <p>
          <b><%=if @post.callsign then @post.callsign.upcase+" " end%><%=@post.topic.name%><%if @post.referenced_date then %> on/from <%=@post.referenced_date.in_time_zone(@tz.name).strftime("%Y-%m-%d")%> <%=if @post.referenced_time then @post.referenced_time.in_time_zone(@tz.name).strftime("%H:%M") end%> (<%=@tz.name%>)<%end%><% if @post.duration then%> for <%=(@post.duration||1).to_s%> day(s)<%end%></b>

        </p>
      <% end %>
      <% if @post.site and @post.site.length>0 then %>
        <p><%=@post.site%></p>
      <% end %>
      <%if (@post.freq and @post.freq.length>0) or (@post.mode and @post.mode.length>0) then%><p><%=@post.freq%> - <%=@post.mode%></p><% end %> 
   </div>
   <div class="box_contents">
      <div class="sectiontext"><%=raw (@post.description).gsub(/(?<=<style type=\"text\/css\">).+(?=<\/style>)/m,'')%></div>
  </div>
 </div>
