<script> 
   document.getElementById("page_status").innerHTML = '';
   document.title = 'NZParks On the Air'
   document.getElementById('logo').innerHTML='NZParks On The Air'
</script>
<div id="actionbar" class="span7">
   <div id="crumbs">
     <%=link_to "Home", '/', remote: true,  :id => 'home', :onclick => "linkHandler('home')" %>
     &nbsp;--&gt;&nbsp;
     <%=  link_to  "Parks:", '/parks', remote: true,  :id => 'parks', :onclick => "linkHandler('parks')" %>
     &nbsp;--&gt;&nbsp;
     <b><%= @park.name %></b>
     </div>
   <div id="controls">
       <% if current_user and current_user.is_modifier %>
            <%=  link_to "Edit", '/parks/'+@park.id.to_s+'/edit', class: "btn btn-small btn-primary", remote: true, :id => 'edit', :onclick => "linkHandler('edit')" %>
       <% end %>
       <%=  link_to "Index", "/parks", class: "btn btn-small btn-primary", remote: true,  :id => 'index', :onclick => "linkHandler('index')" %>
       <%=  link_to "Show/Hide Map", "#", class: "btn btn-small btn-primary",   :onclick => "toggle_map(); return false;"%>
   </div>
</div>
<div id="right_scroll">
   <%= render 'flash' %>
   <div class="erow" id="email">
      <div class="rowtitle"><%= "Park NaPALIS Id:" %></div>
      <div class="rowtext">ZLP/<%= @park.id.to_s %></div>
   </div>
   <div class="erow" id="name">
      <div class="rowtitle"><%= "Name" %></div>
      <div class="rowtext">
        <%=link_to @park.name, '/parks/'+@park.id.to_s, remote: true,  :id => 'park', :onclick => "linkHandler('home')" %>
      </div>
   </div>
   <%
      if not @park.description or @park.description="" then
        dp=Crownparks.find_by(napalis_id: @park.id)
#        if dp then description=dp.Legislatio+" "+dp.Section end
        if dp then description=dp.legislation+" "+dp.section end
      else
        description=@park.description
      end
   %>
   <div class="erow" id="name">
      <div class="rowtitle"><%= "Description" %></div>
      <div class="rowtext"><%= description%></div>
   </div>
   <div class="erow" id="owner">
      <div class="rowtitle"><%= "Managed by" %></div>
      <div class="rowtext"><%= @park.owner%></div>
   </div>
   <div class="erow" id="email">
      <div class="rowtitle"><%= "Minor reserve?" %></div>
      <div class="textext"><%= if @park.is_mr then "Yes" else "No" end %></div>
   </div>
   <div class="erow" id="email">
      <div class="rowtitle"><%= "POTA reference" %></div>
      <div class="textext">
        <% if @park.pota_park then %>
          <%= link_to @park.pota_park.reference, "https://pota.us/#/parks/"+@park.pota_park.reference, :target=>"_blank" %>
          <img src="/assets/external-link-symbol.png">
        <% else %> None <% end %>
      </div> </div>
   <div class="erow" id="email">
      <div class="rowtitle"><%= "Active?" %></div>
      <div class="textext"><%= if @park.is_active then "Yes" else "No" end %></div>
   </div>

   <div class="erow">
      <div class="hrline">
         <hr noshade size="4">
      </div>
   </div>

   <div class="sectiontitle_bold">Links:</div>
   <div class="erow" id="name">
      <div class="rowtitle"><%= "DOC" %></div>
      <div class="rowtext"><%= if @park.doc_link then link_to @park.doc_link, @park.doc_link, :target=>"_blank" end %></div>
   </div>
   <div class="erow" id="name">
      <div class="rowtitle"><%= "Tramper" %></div>
      <div class="rowtext"><%= if @park.tramper_link then link_to @park.tramper_link, @park.tramper_link, :target=>"_blank" end %></div>
   </div>
   <div class="erow" id="name">
      <div class="rowtitle"><%= "Other" %></div>
      <div class="rowtext"><%= if @park.general_link then link_to @park.general_link, @park.general_link, :target=>"_blank" end %></div>
   </div>

   <div class="erow">
      <div class="hrline">
         <hr noshade size="4">
      </div>
   </div>

   <div class="sectiontitle_bold">Bagged by:</div>
   <div class="erow">
     <% if not @park.baggers or (@park.baggers and @park.baggers.count==0) then %>
        <i>No-one has bagged this park yet. Be the first!</i></br>
     <% end %>
     <% @park.baggers.each do |user| %>
         <%=link_to user.callsign, '/users/'+user.callsign, remote: true,  :id => 'user', :onclick => "linkHandler('user')" %>,&nbsp
     <% end %>
   </div>   
   <div class="erow">
     <% if @park.contacts and @park.contacts.count>0 then %>
         <b><%=link_to @park.contacts.count.to_s+" Contacts (View)", '/contacts/?park='+@park.id.to_s, remote: true,  :id => 'user', :onclick => "linkHandler('contact')" %></b>
     <% end %>
   </div>

   <% if current_user %>
     <%=  link_to "Add Contact (Bag Park)", "/contacts/new?park1="+@park.id.to_s, class: "btn btn-small btn-primary btn-highlight", remote: true,  :id => 'contact', :onclick => "linkHandler('contact')" %>
     <%=  link_to "Add Many Contacts", '/contacts/editgrid?park1='+@park.id.to_s, class: "btn btn-small btn-primary", remote: true, :onclick => "linkHandler('edit')" %>

   <% end %>

   <div class="erow">
      <div class="hrline">
         <hr noshade size="4">
      </div>
   </div>

   <div class="sectiontitle_bold">Huts:</div>

   <table> 
   <% @park.huts.each do |h| %>
     <tr>
       <td>
          <%=link_to h.name, '/huts/'+h.id.to_s, remote: true,  :id => 'hut'+h.id.to_s, :onclick => "linkHandler('hut')" %>
       </td>
     </tr>
   <% end %>
   </table>


   <div class="erow">
      <div class="hrline">
         <hr noshade size="4">
      </div>
   </div>

   <div class="sectiontitle_bold">SOTA Summits:</div>

   <table> 
   <% @park.summits.each do |s| %>
     <tr>
       <td>
          <%=link_to s.summit_code, '/summits/'+s.short_code, remote: true,  :id => 'summit'+s.id.to_s, :onclick => "linkHandler('summit')"   %>
       </td>
       <td>
          <%=s.name %>
     </tr>
   <% end %>
   </table>


   <div class="erow">
      <div class="hrline">
         <hr noshade size="4">
      </div>
   </div>
</div>
<script>

    park_init('<%=@park.simple_boundary%>', 0);
    site_toggle_docland(true);
    if(site_map_size==0) { 
       $('#actionbar').removeClass('span7');
       $('#actionbar').addClass('span12');
    }
</script>

